<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="350" Height="400" CanResize="False"
        x:Class="AvaloniaApplicationPracticeOne.EditWindowDriver"
        Title="Изменение данных водителя">
    <StackPanel Orientation="Vertical"
                Margin="25"
                VerticalAlignment="Center" >
        <TextBox Name="NameTBox"
                 Watermark="Введите имя водителя"
                 Margin="0 0 0 10"/>
        <TextBox Name="StateTBox"
                 Watermark="Введите фамилию водителя"
                 Margin="0 0 0 10"/>
        
        <DatePicker Name="BirthdateDPicker"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 30"/>
            
        <Button Content="Изменить"
                HorizontalAlignment="Center"
                Margin="0 0 0 10"
                Name="RegBtn"
                Click="EditBtn_OnClick"/>
        <Button Content="Отмена"
                HorizontalAlignment="Center"
                Name="BackBtn"
                Click="BackBtn_OnClick"/>
    </StackPanel>
</Window>
